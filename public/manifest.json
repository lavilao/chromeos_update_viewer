{
  "name": "ChromeOS Update Viewer",
  "description": "Monitor ChromeOS update progress, status, and errors",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "View Update Status",
    "default_popup": "popup/index.html"
  },
  "options_page": "options/index.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
